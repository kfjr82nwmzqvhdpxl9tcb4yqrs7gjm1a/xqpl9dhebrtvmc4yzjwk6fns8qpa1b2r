{
  "name": "flash-md-whatsapp-bot",
  "description": "A WhatsApp bot powered by Baileys.",
  "repository": "https://github.com/franceking1/FLASH-MD-V2",
  "stack": "heroku-24",
  "scripts": {
    "postdeploy": "echo 'Deployment complete!'"
  },
  "env": {
    "SESSION": {
      "description": "WhatsApp session string (QR-based)",
      "value": "",
      "required": false
    },
    "AUTO_READ_STATUS": {
      "description": "Auto-view statuses",
      "value": "off",
      "required": false
    },
    "AUTO_LIKE": {
      "description": "Auto-like statuses",
      "value": "off",
      "required": false
    },
    "AUTO_READ_DM": {
      "description": "Auto-read DMs",
      "value": "off",
      "required": false
    },
    "OWNER_NUMBER": {
      "description": "Your WhatsApp number in international format",
      "value": "",
      "required": true
    },
    "HEROKU_API_KEY": {
      "description": "Your Heroku API Key",
      "value": "",
      "required": true
    },
    "HEROKU_APP_NAME": {
      "description": "The name of this Heroku app",
      "value": "",
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "Basic"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}
